{
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@widgets/*": ["src/widgets/*"],
      "@app/*": ["src/app/*"],
      "@features/*": ["src/features/*"],
      "@pages/*": ["src/pages/*"],
      "@entities/*": ["src/entities/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
